<% if @game.reviews.count > 0 %>
  <h4>Fun</h4>
  <div class="progress">
    <div
      class="progress-bar progress-bar-info" role="progressbar"
      aria-valuenow=""
      aria-valuemin="0"
      aria-valuemax="100"
      style="width: <%= @game.average_score_for(:fun) %>%"
    >
      <%= @game.average_score_for(:fun) %>%
    </div>
  </div>
  <h4>Playability</h4>
  <div class="progress">
    <div
      class="progress-bar progress-bar-warning"
      role="progressbar"
      aria-valuenow=""
      aria-valuemin="0"
      aria-valuemax="100"
      style="width:<%= @game.average_score_for(:playability) %>%"
    >
      <%= @game.average_score_for(:playability) %>%
    </div>
  </div>
  <h4>Difficulty</h4>
  <div class="progress">
    <div
      class="progress-bar progress-bar-danger"
      role="progressbar"
      aria-valuenow="70"
      aria-valuemin="0"
      aria-valuemax="100"
      style="width:<%= @game.average_score_for(:difficulty) %>%"
    >
      <%= @game.average_score_for(:difficulty) %>%
    </div>
  </div>
<% else %>
  <h4>No Review Data</h4>
<% end %>
